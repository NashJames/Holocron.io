{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": "./config/.prettierrc.json",
  "stylelint.configFile": "./config/.stylelintrc.json",
  "eslint.options": { "overrideConfigFile": "./eslintrc.json" },
  "editor.quickSuggestions": { "strings": true },
  "files.associations": { "*.scss": "postcss" },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass", "css"],
  "search.exclude": {
    "**/*.svg": true,
    "pnpm-lock.yaml": true
  }
}
