{
  "name": "holocron.io",
  "license": "MIT",
  "version": "0.1.0",
  "author": "James Nash (https://github.com/NashJames/)",
  "homepage": "https://github.com/NashJames/Holocron.io/",
  "repository": "github:NashJames/Holocron.io",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "tsc && next build  && rm -rf .swc",
    "clean": "rm -rf node_modules .next .swc next-env.d.ts logs ./src/types/generated",
    "fmt": "pnpm fmt:eslint && pnpm fmt:stylelint && pnpm fmt:prettier",
    "fmt:fix": "pnpm fmt:eslint --fix && pnpm fmt:stylelint --fix && pnpm fmt:prettier --write",
    "fmt:eslint": "next lint",
    "fmt:stylelint": "stylelint '**/*.{css,scss}' --config ./config/.stylelintrc.json",
    "fmt:prettier": "prettier --config ./config/.prettierrc.json --ignore-path ./config/.prettierignore --check .",
    "test": "pnpm test:jest && pnpm test:playwright",
    "test:jest": "jest --config ./config/jest.config.ts",
    "test:playwright": "playwright test --config ./config/playwright.config.ts && rm -rf logs"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/view": "^6.17.1",
    "@heroicons/react": "^2.0.18",
    "@lezer/highlight": "^1.1.6",
    "@nextui-org/react": "^2.1.8",
    "@uiw/codemirror-themes": "^4.21.13",
    "@uiw/react-codemirror": "^4.21.13",
    "framer-motion": "^10.16.2",
    "next": "^13.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-type-animation": "^3.1.0",
    "sharp": "^0.32.5",
    "swr": "^2.2.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@playwright/test": "^1.37.1",
    "@types/react": "^18.2.21",
    "@typescript-eslint/parser": "^6.5.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.16.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "postcss": "^8.4.29",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "browserslist": [
    "defaults and supports es6-module"
  ]
}
