{
  "name": "holocron.io",
  "license": "MIT",
  "version": "0.1.0",
  "author": "James Nash (https://github.com/NashJames/)",
  "homepage": "https://github.com/NashJames/Holocron.io/",
  "repository": "github:NashJames/Holocron.io",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "tsc && next build",
    "clean": "rm -rf node_modules .next tsconfig.tsbuildinfo next-env.d.ts",
    "format": "next lint --fix && pnpm lint:styles --fix && prettier --write .",
    "format:diff": "next lint && pnpm lint:styles && prettier --check .",
    "lint:styles": "stylelint '**/*.{css,scss}' --report-needless-disables --report-invalid-scope-disables --allow-empty-input",
    "test": "pnpm jest && pnpm playwright",
    "test:jest": "pnpm exec jest",
    "test:playwright": "pnpm exec playwright test"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/view": "^6.7.3",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@lezer/highlight": "^1.1.3",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.7",
    "@next/font": "^13.1.6",
    "@uiw/codemirror-themes": "^4.19.7",
    "@uiw/react-codemirror": "^4.19.7",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "swr": "^2.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.33.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-playwright": "^0.12.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^16",
    "pnpm": "^7"
  },
  "packageManager": "pnpm@7.16.0",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
