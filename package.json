{
  "name": "holocron.io",
  "license": "MIT",
  "version": "0.1.0",
  "author": "James Nash (https://github.com/NashJames/)",
  "homepage": "https://github.com/NashJames/Holocron.io/",
  "repository": "github:NashJames/Holocron.io",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "tsc && next build",
    "clean": "rm -rf node_modules .next tsconfig.tsbuildinfo next-env.d.ts logs .swc",
    "format": "next lint --fix && pnpm lint:styles --fix && prettier --write .",
    "format:diff": "next lint && pnpm lint:styles && prettier --check .",
    "lint:styles": "stylelint '**/*.{css,scss}' --report-needless-disables --report-invalid-scope-disables --allow-empty-input",
    "test": "pnpm test:jest && pnpm test:playwright",
    "test:jest": "pnpm exec jest",
    "test:playwright": "pnpm exec playwright test"
  },
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/view": "^6.14.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@lezer/highlight": "^1.1.6",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.6",
    "@uiw/codemirror-themes": "^4.21.7",
    "@uiw/react-codemirror": "^4.21.7",
    "next": "^13.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-playwright": "^0.12.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
