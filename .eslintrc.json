{
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [".next"],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 13
  },
  "rules": {
    "indent": ["warn", 2],
    "semi": ["warn", "never"],
    "quotes": ["warn", "single"],
    "linebreak-style": ["error", "unix"]
  }
}
