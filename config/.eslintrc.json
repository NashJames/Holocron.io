{
  "root": true,
  "ignorePatterns": [".next"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": 13 },
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": { "no-undef": "off" }
    }
  ],
  "rules": {
    "semi": ["warn", "never"],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  }
}
